    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    
    <div class="row">
        <div class="col-md-12">
            <center>
                <h2>What's Adelante up to?</h2>
                <div class="container video-container">
