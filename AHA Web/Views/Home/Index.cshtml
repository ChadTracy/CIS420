@{
    ViewBag.Title = "Home";
}

<div class="jumbotron">
    <center>
        <div id="myCarousel" class="carousel slide" style="width: 600px; height: 400px; margin: 0 auto">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="presentation">
                <div class="item active">
                    <img src="../images/1.jpg" style="width:auto; height: 400px;">
                </div>

                <div class="item">
                    <img src="../images/8.jpg" style="width:auto; height: 400px;">
                </div>

                <div class="item">
                    <img src="../images/4.jpg" style="width:auto; height: 400px;">
                </div>

                <div class="item">
                    <img src="../images/IMG_2477.jpg" style="width:auto; height: 400px;">
                </div>

            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">‹</a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">›</a>
        </div>
    </center>
</div>

<div class="row">
    <div class="col-md-6">
        <center>
            <h2>Our Goals:</h2>
            <p> Encourage youth to set and meet high personal, educational, and career goals </p>
            <p> Help Hispanic parents enjoy an active and informed role in the children’s education </p>
            <p> Connect Hispanic youth and their families with community resources to facilitate their participation in U.S. society </p>
            <p> Provide Hispanic youth and their families with opportunities for civic involvement and invite them to serve as cultural ambassadors </p>
        </center>
    </div>
    <div class="col-md-6">
        <center>
            <h2>Our Programs:</h2>
            <p> Mentoring & Enrichment </p>
            <p> College Readiness </p>
            <p> After School Tutoring </p>
            <p> Parent Engagement </p>
            <p> Ambassadors Leadership Program </p>
            <p> TJX/Bick Hile Scholarship Program </p>
            <p> Intensive Learning Programs </p>
            <p> La Poderosa Student of the Month </p>
        </center>
    </div>
</div>

