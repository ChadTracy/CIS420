<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Adelante Hispanic Achievers</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div id="fb-root"></div>
    <script>
(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_GB/sdk.js#xfbml=1&version=v2.7";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

    <div class="navbar navbar-inverse navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav header-link">
                    @*ActionLink(linkText, actionName, controllerName)*@
                    
                    <li>@Html.ActionLink("Adelante", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("About Us", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Students <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Student of the Month", "StudentOfMonth", "Home")</li>
                            <li>@Html.ActionLink("Students & Parents", "Students", "Home")</li>
                            <li>@Html.ActionLink("Programs", "Programs", "Home")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Get Involved", "GetInvolved", "Home")</li>
                    <li>@Html.ActionLink("Sponsors & Partners", "Sponsors", "Home")</li>
                    <li>@Html.ActionLink("Calendar Testing", "Calendar", "Home")</li>
                    
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-0 col-lg-1"></div>
        <div class="col-md-12 col-lg-10">
            @if (IsSectionDefined("partyBox1") || IsSectionDefined("partyBox2"))
            {
                <div class="container body-content container-fluid col-md-8">
                    @RenderBody()
                </div>

                <div class="container col-md-4">
                    @if (IsSectionDefined("partyBox1")) { 
                        <div class="panel">
                            @RenderSection("partyBox1", false)
                        </div>
                        <br />
                    }
                    @if (IsSectionDefined("partyBox2"))
                    {
                        <div class="panel">
                            @RenderSection("partyBox2", false)
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="container body-content container-fluid">
                    @RenderBody()
                </div>
            }
        </div>
        <div class="col-md-0 col-lg-1"></div>
    </div>

    <hr />
    
    <footer>
        <div class="row">
            <div class="col-md-6">
                <p align="center"><b>Adelante’s Privacy Policy</b></p>
                <p align="center">
                    Adelante respects your privacy. We collect no information about you unless you
                    choose to provide that information to us. We do not give, share, sell or transfer any personal
                    information about you to any third parties. To prevent unauthorized access, maintain accuracy,
                    and ensure the correct use of information, we have put in place appropriate physical, electronic,
                    and administrative procedures to safeguard and secure any information that we collect.
                </p>
            </div>
            <div class="col-md-6">
                <p align="center"><b>501 (c) 3 Statement</b></p>
                <p align="center">
                    Adelante Hispanic Achievers, Inc. is a 501 (c) 3 non-profit organization
                    based at Buechel United Methodist Church, 2817 Hikes Lane,
                    Louisville, Kentucky, 40218
                </p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>